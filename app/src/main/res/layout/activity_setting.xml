<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_voicename_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="音色设置"
            android:textColor="#2D2D2D"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_to_right" />

    </RelativeLayout>
    <View style="@style/PmSettingLineStyle" />

    <RelativeLayout
        android:id="@+id/rl_qa_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="问答设置"
            android:textColor="#2D2D2D"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_to_right" />

    </RelativeLayout>
    <View style="@style/PmSettingLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tv_speed_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="语速设置"
            android:textColor="#2D2D2D"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/speed_adjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:max="50"
            android:min="-50"
            android:progress="20"
            android:maxHeight="8dp"
            android:minHeight="8dp"
            android:layout_toRightOf="@+id/tv_speed_adjust"
            android:progressDrawable="@drawable/adjust_seek_bar"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_circle"
            android:thumbOffset="20dp" />

    </RelativeLayout>
    <View style="@style/PmSettingLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tv_tone_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="音调设置"
            android:textColor="#2D2D2D"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/tone_adjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:max="50"
            android:min="-50"
            android:progress="0"
            android:maxHeight="8dp"
            android:minHeight="8dp"
            android:layout_toRightOf="@+id/tv_tone_adjust"
            android:progressDrawable="@drawable/adjust_seek_bar"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_circle"
            android:thumbOffset="20dp" />

    </RelativeLayout>
    <View style="@style/PmSettingLineStyle" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="大模型"
            android:textColor="#2D2D2D"
            android:textSize="20sp" />


        <Switch
            android:id="@+id/model_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:switchMinWidth="30dp"
            android:scrollbarStyle="outsideInset"
            android:splitTrack="false"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"/>

    </RelativeLayout>
    <View style="@style/PmSettingLineStyle" />

</androidx.appcompat.widget.LinearLayoutCompat>