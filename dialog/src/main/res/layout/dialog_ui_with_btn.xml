<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rect_round_solid_white"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/fl_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="33dp"
                android:gravity="center_horizontal">

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btn_dialog_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_solid_blue"
                    android:minWidth="180dp"
                    android:minHeight="40dp"
                    android:text="@string/ui_str_ok"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/btn_dialog_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_solid_white_blue"
                    android:minWidth="180dp"
                    android:minHeight="40dp"
                    android:text="@string/ui_str_cancel"
                    android:textColor="@color/color_4071FF"
                    android:textSize="18sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
